<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include layout="@layout/top_layout" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pay_wallet_bg_2x"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="请在20分钟内完成支付，否则该订单将被取消"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="41dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号：" />

            <TextView
                android:id="@+id/orderNum"
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20180707" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="41dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易数量：" />

            <TextView
                android:id="@+id/orderMoney"
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingHorizontal="5dp">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="41dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易地址：" />

            <TextView
                android:id="@+id/walletAddress"
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00X" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/kh"
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="41dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款地址：" />

            <TextView
                android:id="@+id/walletNum"
                android:layout_toEndOf="@id/kh"
                android:textSize="12sp"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00x" />
        </RelativeLayout>

        <TextView
            android:id="@+id/copyWallet"
            android:textSize="11sp"
            android:textColor="@drawable/textckmain"
            android:background="@mipmap/mainrecycle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:paddingVertical="3dp"
            android:paddingHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制" />

    </LinearLayout>

    <Button
        android:id="@+id/paycomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@mipmap/forgetpwd"
        android:text="我已支付"
        android:textColor="@drawable/textclick"
        android:textSize="18sp" />

    <TextView
        android:textSize="11sp"
        android:textColor="@color/red"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易提醒" />
    <TextView
        android:textSize="11sp"
        android:textColor="@color/red"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1、请使用您已绑定的钱包、银行卡进行支付，避免资产丢失；" />
    <TextView
        android:textSize="11sp"
        android:textColor="@color/red"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2、请勿将您的资产转入非上方的地址内，避免造成资产损失；" />
    <TextView
        android:textSize="11sp"
        android:textColor="@color/red"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3、当日累计3笔订单取消，则会限制当天投资功能。" />



</LinearLayout>

