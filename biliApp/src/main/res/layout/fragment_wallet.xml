<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@mipmap/qb_bg_2x"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/wallet_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qb_icon_2x"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/headbg"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:padding="3dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/me_head_icon_2x"
                android:scaleType="fitXY"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/wallet_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="~8989"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:text="总资产(￥)"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="15dp"/>

        <ImageView
            android:id="@+id/add_biz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/qb_icon2_2x"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wallet_lv"></ListView>

</LinearLayout>
