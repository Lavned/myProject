<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/whitebg">
        <LinearLayout
            android:id="@+id/defaultLin"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/cb_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="5dp"
                android:button="@drawable/choosepay"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/setDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:textColor="@color/main"
                android:textSize="11sp" />
            <ImageView
                android:id="@+id/wal_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qb_icon12_2x"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>

        <View
            android:layout_below="@id/defaultLin"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>


        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/qb_head_icon2_2x"
            android:scaleType="fitXY"
            android:id="@+id/item_icon"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钱包1"
            android:layout_marginTop="45dp"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:layout_marginLeft="55dp"
            />

        <TextView
            android:id="@+id/item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7u8u79u8i0567087uy780ijy547ut5yt5y5yyy5ty5rt"
            android:layout_marginTop="75dp"
            android:textSize="12sp"
            android:textColor="@color/black_6"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            />

    </RelativeLayout>

</LinearLayout>