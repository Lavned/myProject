<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@mipmap/l_concentbg"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="立即投资1"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/view_bfbbew"
        app:layout_constraintEnd_toStartOf="@+id/view_status"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="(开售中)"
        android:textColor="@color/red"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_name"
        app:layout_constraintTop_toTopOf="@+id/view_name" />

    <TextView
        android:id="@+id/view_bfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="4.8%"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_bfbbew"
        app:layout_constraintStart_toStartOf="@+id/view_bfbbew" />

    <TextView
        android:id="@+id/view_bfbbew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:gravity="center"
        android:text="年化啥啥啥"
        android:textColor="@color/black_1"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/view_date"
        app:layout_constraintStart_toStartOf="@+id/view_name"
        app:layout_constraintTop_toBottomOf="@+id/view_name" />

    <TextView
        android:id="@+id/view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="21dp"
        android:layout_marginStart="1dp"
        android:drawableLeft="@mipmap/h_clock2x"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="起头期限为90天"
        android:textColor="@color/black_1"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/view_investment"
        app:layout_constraintEnd_toStartOf="@+id/view_money"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_bfbbew" />

    <TextView
        android:id="@+id/view_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:drawableLeft="@mipmap/h_money2x"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="起头金额为1元"
        android:textColor="@color/black_1"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_date"
        app:layout_constraintTop_toBottomOf="@+id/view_bfbbew" />

    <TextView
        android:id="@+id/view_investment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@mipmap/small_mainbtn"
        android:gravity="center"
        android:text="立即投资"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_date" />

</android.support.constraint.ConstraintLayout>