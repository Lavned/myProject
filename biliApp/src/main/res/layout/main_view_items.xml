<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:id="@+id/view_item"
    android:background="@mipmap/l_concentbg">


    <TextView
        android:id="@+id/view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="币余宝"
        android:textColor="#666666"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="法币优选项目，创造更高价值"
        android:textColor="@color/black_1"
        android:textSize="11sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view_texte1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4.8%"
            android:textColor="@color/red"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/view_texte2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="4.8%"
            android:textColor="@color/red"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view_texte3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="起头期限为90天"
            android:textColor="@color/black_1"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/view_texte4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="起头金额为1元"
            android:textColor="@color/black_1"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_investment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/small_mainbtn"
        android:gravity="center"
        android:text="立即投资"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:layout_gravity="center"/>

</LinearLayout>