<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择充值地址"
        android:textSize="13sp"
        android:textColor="@color/black_1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"/>


    <RelativeLayout
        android:id="@+id/my_address"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:drawableLeft="@mipmap/qb_icon8_2x"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/me_gray_back_2x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="充值地址"
        android:background="@color/white"
        android:paddingVertical="10dp"
        android:textColor="@color/black_1"
        android:textSize="12sp"
        android:paddingLeft="15dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00000000000000000000000000000000000"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_6"
            android:textSize="11sp"
            android:paddingLeft="15dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@mipmap/qb_icon9_2x"
            android:text="复制"
            android:textColor="@drawable/textclick"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="11sp"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Token"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="11sp"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/qb_logo1_2x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="11sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:hint="请输入充值金额0.00"
            android:background="@null"
            android:inputType="numberDecimal"
            android:textColor="@color/main"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/forgetpwd"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="确认充值"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:textColor="@drawable/textclick"/>

</LinearLayout>
