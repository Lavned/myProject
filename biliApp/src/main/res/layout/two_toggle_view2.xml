<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/two_toggle_text"
            android:drawableLeft="@mipmap/leftdraw"
            android:drawablePadding="8dp"
            android:paddingTop="8dp"
            android:text="构建场外交易渠道"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/two_toggle_text_left"
            android:paddingLeft="10dp"
            android:layout_marginVertical="10dp"
            android:text="我们拥有众多的可信场外交易渠道"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@color/line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text"
        android:drawableLeft="@mipmap/leftdraw"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"
        android:text="专业交易员操作"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text_left"
        android:paddingLeft="10dp"
        android:layout_marginVertical="10dp"
        android:text="我们有专业的数字货币交易员，展开场外交易"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@color/line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text"
        android:drawableLeft="@mipmap/leftdraw"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"
        android:text="筛选优质交易平台"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text_left"
        android:paddingLeft="10dp"
        android:layout_marginVertical="10dp"
        android:text="我们只筛选风控可靠、实力雄厚的交易所进行交易"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@color/line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text"
        android:drawableLeft="@mipmap/leftdraw"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"
        android:text="程序化统计套利"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text_left"
        android:paddingLeft="10dp"
        android:layout_marginVertical="10dp"
        android:text="我们选择最优网关传输，程序会在几乎小于1秒的时间内完成交易"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@color/line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text"
        android:drawableLeft="@mipmap/leftdraw"
        android:drawablePadding="8dp"
        android:paddingTop="8dp"
        android:text="Https加密传输"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/two_toggle_text_left"
        android:paddingLeft="10dp"
        android:layout_marginVertical="10dp"
        android:text="我们采用国际公认的SSL数字证书，HTTPS加密协议进行数据传输"/>

</LinearLayout>