<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />


    <RelativeLayout
        android:id="@+id/re_version"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本检测"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_6"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_1"
            android:gravity="right"
            android:text="1.0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_about"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于币哩币哩"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_6"
            android:textSize="12sp"
            android:paddingLeft="15dp"/>
        <ImageView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_gray_back_2x"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_pass"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密码管理"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_6"
            android:textSize="12sp"
            android:paddingLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/me_gray_back_2x"/>
    </RelativeLayout>

    <Button
        android:id="@+id/exit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textColor="@drawable/textclick"
        android:background="@mipmap/forgetpwd"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

</LinearLayout>
