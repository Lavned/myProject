<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/text_qw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全网"
            android:textSize="13sp"
            android:textColor="@color/black33"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全网"
            android:layout_below="@id/text_qw"
            android:textColor="@color/black_1"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/text_qw"
            android:text="usd"
            android:textColor="@color/black_1"
            android:textSize="12sp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OKFX"
            android:textSize="13sp"
            android:textColor="@color/black33"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/textNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OKFX"
            android:textSize="13sp"
            android:textColor="@color/black33"/>
    </LinearLayout>



        <TextView
            android:id="@+id/btnmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/red10bg"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:text="10909" />

    <ImageView
        android:id="@+id/del_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/hq_icon3_2x"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true" />

</RelativeLayout>