<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textSize="13sp"
        android:textColor="@color/black_1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"/>


    <RelativeLayout
        android:id="@+id/my_address"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/qb_icon8_2x"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择银行"
            android:paddingVertical="15dp"
            android:layout_centerVertical="true"
            android:paddingLeft="40dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/me_gray_back_2x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收款方户名"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈海波"
            android:textColor="@color/black_6"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收款方账户"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6217001210029664974"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:textSize="12sp"
            android:paddingLeft="15dp"/>

        <Button
            android:id="@+id/num_copy"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@mipmap/qb_icon9_2x"
            android:text="复制"
            android:textColor="@drawable/textclick"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="11sp"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收款方银行"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国建设银行"
            android:textColor="@color/black_6"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开户银行"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海浦东张江支行"
            android:textColor="@color/black_6"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="充值金额"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/paymoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:hint="请输入充值数量"
            android:background="@null"
            android:inputType="numberDecimal"
            android:textColor="@color/main"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>


    <Button
        android:id="@+id/sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/forgetpwd"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="确认充值"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:textColor="@drawable/textclick"/>

</LinearLayout>
