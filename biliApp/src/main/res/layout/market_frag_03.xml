<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/condition1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sortOne"
                style="@style/main_text"
                android:text="近24小时"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/condition2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sortTwo"
                style="@style/main_text"
                android:text="市值"/>

            <ImageView
                android:id="@+id/szImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/hq_icon3_default_2x" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/condition3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sortThree"
                style="@style/main_text"
                android:text="净流入"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hq_icon3_default_2x"
                android:padding="5dp"
                android:id="@+id/jlImg"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/condition4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sortFour"
                style="@style/main_text"
                android:text="净流入占比"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hq_icon3_default_2x"
                android:padding="5dp"
                android:id="@+id/jlbImg"/>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="5dp"
        android:background="@color/line"/>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
