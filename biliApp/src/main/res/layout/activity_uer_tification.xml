<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_layout"></include>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="5dp">

        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="13sp"
            android:textColor="@color/black33"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginStart="45dp"
            android:layout_centerVertical="true"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_name"
            style="@style/two_toggle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLength="30"
            android:gravity="right"
            android:maxLines="1"
            android:hint="请输入姓名" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="5dp">

        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="13sp"
            android:textColor="@color/black33"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginStart="65dp"
            android:layout_centerVertical="true"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_idcard"
            style="@style/two_toggle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:background="@null"
            android:maxLength="18"
            android:maxLines="1"
            android:hint="请输入身份证号" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="5dp">

    <TextView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="13sp"
        android:textColor="@color/black33"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝账号" />

    <EditText
        android:id="@+id/user_zfb"
        style="@style/two_toggle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:background="@null"
        android:maxLines="1"
        android:hint="请输入支付宝账号" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="5dp">

        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="13sp"
            android:textColor="@color/black33"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱账号" />

        <EditText
            android:id="@+id/user_email"
            style="@style/two_toggle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLines="1"
            android:hint="请输入邮箱账号" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="5dp">

        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="13sp"
            android:textColor="@color/black33"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信" />

        <EditText
            android:id="@+id/user_wx"
            style="@style/two_toggle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLines="1"
            android:hint="请输入微信号" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="5dp">

        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="13sp"
            android:textColor="@color/black33"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ" />

        <EditText
            android:id="@+id/user_qq"
            style="@style/two_toggle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLines="1"
            android:hint="请输入QQ号" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_sumbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/forgetpwd"
        android:text="确定"
        android:textColor="@drawable/textclick"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:layout_marginTop="50dp"/>



</LinearLayout>
