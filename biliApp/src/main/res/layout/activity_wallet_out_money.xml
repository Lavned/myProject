<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择提现地址"
        android:textSize="13sp"
        android:textColor="@color/black_1"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"/>

    <RelativeLayout
        android:id="@+id/my_address"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ma_walName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的地址"
            android:drawableLeft="@mipmap/qb_head_icon2_2x"
            android:drawablePadding="5dp"
            android:paddingVertical="15dp"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/me_gray_back_2x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Token"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_1"
            android:textSize="11sp"
            android:paddingLeft="15dp"/>

        <ImageView
            android:id="@+id/ttitle_img"
            android:visibility="gone"
            android:layout_width="20dp"
            android:src="@mipmap/qb_logo1_2x"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/ttitle_name"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="ETH"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="11sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提现数量"
            android:paddingVertical="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:paddingLeft="15dp"/>
        <EditText
            android:id="@+id/pay_Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:hint="请输入提现数量0.00"
            android:background="@null"
            android:textColor="@color/main"
            android:inputType="numberDecimal"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>
    </RelativeLayout>


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/forgetpwd"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="确认提现"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:textColor="@drawable/textclick"/>

</LinearLayout>
