<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/top_layout" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/whitebg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="投资币种："
                    android:textColor="@color/black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/btname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bz"
                    android:padding="10dp"
                    android:text="BTC"
                    android:textColor="@color/black_6"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bz1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="投资金额："
                    android:textColor="@color/black33"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/moneyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/bz1"
                    android:background="@drawable/gray10"
                    android:hint="该项目起投金额为5000元     "
                    android:paddingLeft="8dp"
                    android:paddingRight="15dp"
                    android:paddingVertical="5dp"
                    android:textColor="@color/black_6"
                    android:textSize="11sp" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/whitebg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:paddingLeft="10dp"
                android:text="请选择支付方式"
                android:textColor="@color/black_1"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/me_line_2x" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:background="@color/white"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/yezf"
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/other_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="余额支付" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/yezf"
                    android:text="(您的余额为0元)"
                    android:textColor="@color/red"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/cb_money"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/choosepay"
                    android:button="@null"
                    android:checked="true"
                    android:padding="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/me_line_2x" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:paddingHorizontal="10dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/icon_card"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="银行卡支付" />

                <CheckBox
                    android:id="@+id/cb_card"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/choosepay"
                    android:button="@null"
                    android:padding="10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/me_line_2x" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/coupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:paddingLeft="10dp"
                    android:text="请选择优惠券"
                    android:textColor="@color/black_1"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@mipmap/me_line_2x" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/white"
                    android:paddingHorizontal="10dp">

                    <TextView
                        style="@style/two_toggle_text_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:drawableLeft="@mipmap/zf_icon_2x"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="红包" />

                    <TextView
                        android:id="@+id/hb_tip"
                        style="@style/two_toggle_text_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:text="暂无可用红包"
                        android:visibility="gone" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/me_gray_back_2x" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@mipmap/forgetpwd"
            android:text="立即投资"
            android:textColor="@drawable/textclick"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/lin_agreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_agreed"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/choosepay"
                android:button="@null"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已同意并阅读"
                android:textColor="@color/black_6"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/ag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《投资风险协议书》"
                android:textColor="@color/red"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《资产委托协议书》"
                android:textColor="@color/red"
                android:textSize="11sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ag_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="《智能投顾招募说明》"
            android:textColor="@color/red"
            android:textSize="11sp" />


    </LinearLayout>


</ScrollView>
