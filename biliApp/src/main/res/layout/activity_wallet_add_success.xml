<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/top_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f6f6f6"/>

    <ImageView
        android:id="@+id/succ_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/qb_icon14_2x"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>


    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请通过您的数字钱包进行充值"
        android:textColor="@color/black33"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/one_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-12-10"
        android:textColor="@color/black_1"
        android:textSize="11sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/two_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如未支付订单将于30分钟自动关闭"
        android:textColor="@color/black_6"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/finish_yes"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:background="@mipmap/forgetpwd"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="去完成"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:textColor="@drawable/textclick"/>

</LinearLayout>
