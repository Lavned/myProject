<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <include layout="@layout/top_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:background="@mipmap/selecttext"
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="可使用"
            android:textColor="@drawable/textckmain"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="已使用"
            android:textColor="@color/black_1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="已失效"
            android:textColor="@color/black_1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="兑换码"
            android:textColor="@color/black_1"
            android:textSize="13sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/cou_empty"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无优惠券"
        android:textSize="16sp"
        android:textColor="@color/black_1"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawableTop="@mipmap/yhq_icon_2x"
        android:drawablePadding="10dp"/>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_coupons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>




    <LinearLayout
        android:id="@+id/coupons_lin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入优惠券邀请码"
                android:textSize="13sp"
                android:layout_margin="10dp"
                android:textColor="@color/black33"
                android:layout_gravity="center"
                />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="不区分大小写"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:background="@null"
                />

            <View
                android:layout_width="145dp"
                android:layout_gravity="center"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/line"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/textclick"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:text="确认兑换"
                android:layout_marginVertical="20dp"
                android:background="@mipmap/forgetpwd"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black_1"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:text="兑换规则："/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black_1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="1.兑换成功的优惠券，系统将在2小时内发送到账户中，使用规则及条件在可使用优惠券中查看；"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black_1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="2.每个邀请码仅可兑换一次；"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black_1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="20dp"
            android:text="3.活动期间遇到问题可联系客服；"/>


    </LinearLayout>




</LinearLayout>
