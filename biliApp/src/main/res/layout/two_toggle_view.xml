<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收益类型"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收益类型" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="封闭期"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一月／3月／一年" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起头条件"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1BTC/1ETH/100000BNCN" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预期年化收益率"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8%／7.2%／9.6%" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申购费率"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期减免" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赎回费率"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期减免" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理费率"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本期减免" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:layout_height="40dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赎回方式"/>
            <TextView
                style="@style/two_toggle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到期赎回" />

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>