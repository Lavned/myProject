<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cou_re"
        android:background="@mipmap/yhq_bg_2x"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/cou_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥588"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="20dp" />


        <TextView
            android:id="@+id/cou_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTC七月标 / 7天 "
            android:textColor="@color/black33"
            android:textSize="13sp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:id="@+id/cou_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效日期:2018-7-18"
            android:textColor="@color/black_6"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="120dp"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/cou_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去使用"
            android:textColor="@color/red"
            android:background="@mipmap/redrecycle"
            android:layout_marginTop="15dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:textSize="11sp" />

    </RelativeLayout>


</RelativeLayout>