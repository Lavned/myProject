<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:background="@drawable/whitebg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bank_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/back_card_bg1_2x" />

            <TextView
                android:layout_marginTop="45dp"
                android:id="@+id/bank_khhname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="开户行：上海浦东发展银行"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bank_no"
                android:layout_marginTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="6444         ****         ****         3434"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/defaultLin"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/cb_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingHorizontal="5dp"
                android:button="@drawable/choosepay"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/setDefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认"
                android:textColor="@color/main"
                android:textSize="11sp" />
            <ImageView
                android:id="@+id/deleteBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qb_icon12_2x"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>