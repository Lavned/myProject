<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@mipmap/login_top"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginTop="65dp"
                    android:layout_centerHorizontal="true"
                    android:text="欢迎来到币哩币哩"/>

                <LinearLayout
                    android:id="@+id/button_gv"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="110dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/tv_Login"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:text="登录"/>

                        <View
                            android:id="@+id/view_login"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="#ffffff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:id="@+id/tv_register"
                        android:layout_height="30dp"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="注册"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                        <View
                            android:visibility="gone"
                            android:id="@+id/view_register"
                            android:layout_width="40dp"
                            android:layout_height="2dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="#ffffff"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_layout"
                    android:layout_below="@+id/button_gv"
                    android:layout_width="314dp"
                    android:layout_height="400dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:background="@mipmap/l_concentbg">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="60dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户名"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <EditText
                            android:inputType="number"
                            android:id="@+id/ed_account"
                            android:layout_marginTop="20dp"
                            android:paddingVertical="5dp"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:hint="用户名"
                            android:focusable="true"
                            android:textColor="@color/main"
                            android:textSize="11sp"
                             />

                        <ImageView
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:text="密码"/>

                        <EditText
                            android:maxLength="30"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:paddingVertical="5dp"
                            android:id="@+id/ed_login_pass"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="密码"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/checkbox"
                            android:layout_width="15dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="15dp"
                            android:layout_marginVertical="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/rbbg"
                            android:button="@null"/>
                        <TextView
                            android:id="@+id/tv_save_pwd_re"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:paddingVertical="8dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:textSize="10sp"
                            android:text="保存密码"/>
                        <TextView
                            android:id="@+id/tv_forget_pwd_re"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:textSize="10sp"
                            android:paddingVertical="8dp"
                            android:text="忘记密码？"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:background="@mipmap/main_button"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/register_layout"
                    android:layout_below="@+id/button_gv"
                    android:layout_width="314dp"
                    android:layout_height="450dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:background="@mipmap/l_concentbg">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户名"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <EditText
                            android:maxLength="11"
                            android:maxLines="1"
                            android:inputType="number"
                            android:id="@+id/re_account"
                            android:layout_marginTop="20dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:hint="用户名"
                            android:focusable="true"
                            android:textColor="@color/main"
                            android:textSize="11sp"
                            />

                        <ImageView
                            android:layout_marginTop="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:text="验证码"/>

                        <TextView
                            android:id="@+id/getCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:paddingHorizontal="5dp"
                            android:paddingVertical="5dp"
                            android:textColor="#ffffff"
                            android:background="@color/main"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:text="获取验证码"/>

                        <EditText
                            android:maxLength="11"
                            android:maxLines="1"
                            android:inputType="number"
                            android:paddingVertical="5dp"
                            android:id="@+id/re_account_code"
                            android:layout_marginTop="20dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="密码"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_marginTop="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:text="密码"/>

                        <EditText
                            android:maxLength="30"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:id="@+id/re_login_pass"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="密码"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_marginTop="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:text="确认密码"/>

                        <EditText
                            android:maxLength="30"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:id="@+id/re_login_repass"
                            android:paddingVertical="5dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="密码"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_marginTop="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:text="邀请人(没有可不填)"/>

                        <EditText
                            android:maxLength="11"
                            android:maxLines="1"
                            android:inputType="number"
                            android:id="@+id/re_account_yq"
                            android:layout_marginTop="20dp"
                            android:paddingVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="邀请人"
                            android:textColor="#333333"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_marginTop="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@mipmap/l_line2x"/>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:text="注册"
                        android:textColor="@color/white"
                        android:background="@mipmap/main_button"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
