<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F6F6F6"
    android:paddingTop="0dp"
    android:id="@+id/onescrollView"
    android:scrollbars="none"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:clipChildren="false"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#fff"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hm_one"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon13"
                android:textColor="#666666"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="13级邀请"/>
            <TextView
                android:id="@+id/hm_four"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/h_icon4_2x"
                android:textColor="#666666"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="邀请好友"/>
            <TextView
                android:id="@+id/hm_two"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/h_icon2_2x"
                android:textColor="#666666"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:text="望潮计划"/>
            <TextView
                android:id="@+id/hm_three"
                android:textSize="13sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/h_icon3_2x"
                android:textColor="#666666"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="活动中心"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:background="#fff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:text="最新通知"/>
            <TextSwitcher
                android:id="@+id/text_switch"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center_horizontal"
                android:text="最新通知，明天放假了" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="20dp"
            android:paddingBottom="8dp"
            android:orientation="vertical"
            android:layout_marginVertical="10dp">
            <TextView
                android:id="@+id/tjxm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐项目"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@mipmap/title_bg2x"/>

            <TextView
                android:id="@+id/yyy"
                android:layout_below="@+id/tjxm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="挑选优质项目，创造更高价值"
                android:textColor="@color/black_1"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:gravity="center" />

            <TextView
                android:layout_toLeftOf="@id/position_count"
                android:id="@+id/position_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/black_6"
                android:textSize="12sp"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/position_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/3"
                android:textColor="@color/black_1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                android:layout_alignParentBottom="true"
                android:gravity="center|right" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:clipChildren="false"
            android:layout_height="180dp">
            <io.ionic.ylnewapp.custom.customViewpagerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/one_viewpager"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:background="#fff"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热销产品"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@mipmap/title_bg2x"/>

            <TextView
                android:layout_below="@+id/tjxm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="法币优选项目，创造更高价值"
                android:textColor="@color/black_1"
                android:layout_marginVertical="8dp"
                android:textSize="11sp"
                android:gravity="center" />

            <io.ionic.ylnewapp.custom.NewListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:divider="@null"
                android:layout_marginBottom="10dp"
                android:id="@+id/one_lv">
            </io.ionic.ylnewapp.custom.NewListView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
