<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/top_layout"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/whitebg"
        android:layout_marginHorizontal="15dp">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bz"
                android:textColor="@color/black33"
                android:textSize="13sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资币种：" />

            <TextView
                android:id="@+id/btname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bz"
                android:padding="10dp"
                android:text="BTC"
                android:textColor="@color/black_6"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bz1"
                android:textColor="@color/black33"
                android:textSize="13sp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资金额：" />
            <EditText
                android:id="@+id/moneynum"
                android:layout_toRightOf="@id/bz1"
                android:textColor="@color/black_6"
                android:textSize="11sp"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:paddingVertical="5dp"
                android:background="@drawable/gray10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="该项目起投金额为1BTC     " />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebg"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">

        <TextView
            android:textSize="13sp"
            android:textColor="@color/black_1"
            android:layout_margin="15dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/me_line_2x"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/yezf"
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/other_icon"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="余额支付" />

            <TextView
                android:id="@+id/balance"
                android:layout_toRightOf="@id/yezf"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:text="(您的余额为0元)" />

            <CheckBox
                android:padding="10dp"
                android:checked="true"
                android:id="@+id/cb_money"
                android:layout_width="15dp"
                android:layout_marginLeft="40dp"
                android:layout_height="15dp"
                android:layout_marginVertical="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/choosepay"
                android:button="@null"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/me_line_2x"/>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:paddingHorizontal="10dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_card"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="银行卡支付" />

            <CheckBox
                android:padding="10dp"
                android:id="@+id/cb_card"
                android:layout_width="15dp"
                android:layout_marginLeft="40dp"
                android:layout_height="15dp"
                android:layout_marginVertical="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/choosepay"
                android:button="@null"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/me_line_2x"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:paddingHorizontal="10dp">

            <TextView
                style="@style/two_toggle_text_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_wallet"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="钱包支付" />

            <CheckBox
                android:padding="10dp"
                android:id="@+id/cb_wallet"
                android:layout_width="15dp"
                android:layout_marginLeft="40dp"
                android:layout_height="15dp"
                android:layout_marginVertical="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/choosepay"
                android:button="@null"/>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/dig_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@mipmap/forgetpwd"
        android:text="立即投资"
        android:textColor="@drawable/textclick"
        android:textSize="18sp" />


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币种：" />

                <TextView
                    android:id="@+id/bName"
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="BNCN" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币额：" />

                <TextView
                    android:id="@+id/bNum"
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="4000个" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年化利率：" />

                <TextView
                    android:id="@+id/bRate"
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="4.8%" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6" />


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6" />



        </LinearLayout>

</LinearLayout>
