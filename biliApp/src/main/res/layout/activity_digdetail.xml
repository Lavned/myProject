<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@mipmap/byb3bg">

        <ImageView
            android:id="@+id/back_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/whiteback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="数字资产第一季"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f6f6f6"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@mipmap/zwt001"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/notifaction"
                android:layout_marginRight="10dp"/>

            <TextSwitcher
                android:id="@+id/text_switcher"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center_horizontal"
                android:text="最新通知，明天放假了" />

        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币种：" />

                <TextView
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="BNCN" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币额：" />

                <TextView
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="4000个" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年化利率：" />

                <TextView
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="4.8%" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/detailbg1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="付款地址"
                    android:textColor="@color/black33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/pay_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    android:background="@mipmap/zwt002"
                    android:gravity="center_horizontal|center"
                    android:text="063dwd23332cdds2239988999900099000000000"
                    android:textColor="@color/black33"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/picture2x" />

                <TextView
                    android:id="@+id/copy_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:background="@mipmap/mainrecycle"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="3dp"
                    android:text="点击复制"
                    android:textColor="@drawable/textckmain"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:background="@mipmap/detailbg2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="我的钱包地址"
                    android:textColor="@color/black33"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/zwt002"
                    android:gravity="center_horizontal|center"
                    android:text="063dwd23332cdds2239988999900099000000000"
                    android:textColor="@color/black33"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="请认真核对您的钱包地址，如有错误及时联系客服处理"
                    android:textColor="@color/red"
                    android:textSize="11sp" />

            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="30dp"
                android:background="@mipmap/forgetpwd"
                android:text="确认支付"
                android:textColor="@drawable/textclick"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
