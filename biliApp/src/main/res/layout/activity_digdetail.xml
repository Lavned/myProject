<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@mipmap/byb3bg">

        <ImageView
            android:id="@+id/back_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="20dp"
            android:paddingVertical="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/whiteback" />

        <TextView
            android:id="@+id/btname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="数字资产第一季"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f6f6f6"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@mipmap/zwt001"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/notifaction"
                android:layout_marginRight="10dp"/>

            <TextSwitcher
                android:id="@+id/text_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center_horizontal"
                android:text="最新通知，明天放假了" />

        </LinearLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币种：" />

                <TextView
                    android:id="@+id/bName"
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="BNCN" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资币额：" />

                <TextView
                    android:id="@+id/bNum"
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="4000个" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="5dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年化利率：" />

                <TextView
                    android:id="@+id/bRate"
                    style="@style/two_toggle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="4.8%" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingHorizontal="10dp">

                <TextView
                    style="@style/two_toggle_text_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/other_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="余币支付" />

                <CheckBox
                    android:enabled="false"
                    android:padding="10dp"
                    android:checked="true"
                    android:id="@+id/cb_money"
                    android:layout_width="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_height="15dp"
                    android:layout_marginVertical="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/choosepay"
                    android:button="@null"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6" />

            <Button
                android:id="@+id/dig_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="60dp"
                android:background="@mipmap/forgetpwd"
                android:text="确认支付"
                android:textColor="@drawable/textclick"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
