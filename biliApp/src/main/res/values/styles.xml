<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/spalsh</item>
    </style>

    <style name="friendText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/friebd_text</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="yqText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/friebd_text</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="seeText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="seeText2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="friendWhite">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="friendWhiteSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>


    <style name="two_toggle_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:textColor">@color/main</item>
    </style>


    <style name="two_toggle_text_left">
       <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black_6</item>
    </style>

    <style name="Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    //选择图片
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
    </style>


    <!--密码输入框start-->
    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_gone</item>
    </style>

    <!-- 黑色正常大小的文字 -->
    <style name="style_black_normal_text">
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 分割线 -->
    <style name="style_separate_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <declare-styleable name="PayPwdView">
        <attr name="count" format="integer" />
        <attr name="border_color" format="color" />
        <attr name="dot_color" format="color" />
    </declare-styleable>

    <style name="layout_input_amount_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!--键盘数字-->
    <style name="btn_input_num_style">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">25sp</item>
    <item name="android:textColor">@color/black_1</item>
    <item name="android:background">@color/white</item>
    </style>




    //行情文字
    <style name="main_text">
        <item name="android:paddingVertical" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:layout_width">wrap_content</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
